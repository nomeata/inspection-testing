  hs-source-dirs:      examples
  main-is:             NS_NP.hs
  build-depends:       inspection-testing
  build-depends:       base
  default-language:    Haskell2010
  ghc-options:         -main-is NS_NP
  if impl(ghc < 8.4)
      ghc-options:       -fplugin=Test.Inspection.Plugin

